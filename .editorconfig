# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{js,ts}]
indent_size = 2
quote_type = single

[*.{html,css}]
indent_size = 2

[*.{json,yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab
