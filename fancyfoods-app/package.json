{
  "name": "fancyfoods-manager",
  "version": "1.0.0",
  "description": "Local-only Electron app for managing Fancy Foods wholesale operations",
  "main": "main.js",
  "author": "Fancy Foods",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder -mwl"
  },
  "dependencies": {
    "archiver": "^6.0.2",
    "adm-zip": "^0.5.10",
    "better-sqlite3": "^9.4.3",
    "bootstrap": "^5.3.3",
    "electron-store": "^8.2.0",
    "nodemailer": "^6.9.14"
  },
  "devDependencies": {
    "electron": "^28.3.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.fancyfoods.manager",
    "productName": "FancyFoods Manager",
    "files": [
      "main.js",
      "renderer/**/*",
      "database/**/*",
      "attachments/**/*",
      "emails/**/*",
      "backup/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "extraResources": [
      {
        "from": "database",
        "to": "database"
      },
      {
        "from": "attachments",
        "to": "attachments"
      },
      {
        "from": "emails",
        "to": "emails"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
